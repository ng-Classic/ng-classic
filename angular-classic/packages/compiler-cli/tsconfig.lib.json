{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*_spec.ts",
    "src/test/**/*.ts",
    "src/**/*.test.ts",
    "src/**/test/**/*.ts",
    "src/**/testing/**/*.ts",
    "src/integrationtest/**/*.ts"
  ]
}
