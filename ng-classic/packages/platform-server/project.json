{
  "name": "platform-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/platform-server/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/platform-server",
        "main": "packages/platform-server/src/index.ts",
        "tsConfig": "packages/platform-server/tsconfig.lib.json",
        "assets": []
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs platform-server {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/platform-server/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/packages/platform-server"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/platform-server"
      }
    }
  },
  "tags": []
}
