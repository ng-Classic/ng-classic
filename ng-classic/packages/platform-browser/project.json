{
  "name": "platform-browser",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/platform-browser/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/platform-browser",
        "main": "packages/platform-browser/src/index.ts",
        "tsConfig": "packages/platform-browser/tsconfig.lib.json",
        "assets": []
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs platform-browser {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/platform-browser/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/packages/platform-browser"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/platform-browser"
      }
    }
  },
  "tags": []
}
